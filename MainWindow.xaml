<Window x:Class="TemporalMotionExtractionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:TemporalMotionExtractionAnalysis.Model"
        mc:Ignorable="d"
        Title="Temporal Motion Analysis App" 
        Width="1120"
        Height="980"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <models:IndexConverter x:Key="IndexConverter"/>
        <models:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <!-- Parent Control Pane : Left -->
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5,5,0,5" Width="250" Height="60">
                        <DockPanel>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Label Content="Folder Name: " FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Label Content="{Binding FolderName}" MaxWidth="300" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Content="Browse" Command="{Binding LoadImagesCommand}" Width="100" Margin="5,0,10,0"/>
                                <!-- Display Image Count -->
                                <!--<TextBlock Text="{Binding ImageCount, StringFormat='Number of Images: {0}'}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
                            </StackPanel>

                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Playback Controls Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Playback Controls" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">
                            <!-- Previous Button -->
                            <Button Command="{Binding PreviousCommand}" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="5,0">
                                <TextBlock Text="&#xE100;" />
                            </Button>
                            <!-- Play Button -->
                            <Button Command="{Binding PlayCommand}" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="5,0">
                                <TextBlock Text="&#xE102;" />
                            </Button>
                            <!-- Pause Button -->
                            <Button Command="{Binding PauseCommand}" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="5,0">
                                <TextBlock Text="&#xE103;" />
                            </Button>
                            <!-- Stop Button -->
                            <Button Command="{Binding StopCommand}" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="5,0">
                                <TextBlock Text="&#xE15B;" />
                            </Button>
                            <!-- Next Button -->
                            <Button Command="{Binding NextCommand}" FontFamily="Segoe MDL2 Assets" FontSize="24" Margin="5,0">
                                <TextBlock Text="&#xE101;" />
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Visual Encoding Options Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="250" Height="600">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Visual Encoding Options" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Vertical" Margin="5,0">
                            <!-- TODO: Add your visual encoding options here -->
                            <StackPanel Orientation="Vertical">
                                <!-- Radio Buttons for Pixel and Marks -->
                                <StackPanel Orientation="Horizontal">
                                    <DockPanel VerticalAlignment="Center" Margin="5">
                                        <Label DockPanel.Dock="Left" FontWeight="Bold">Select Mode:</Label>
                                        <RadioButton x:Name="PixelRadioButton" Content="Pixel" GroupName="Mode" Margin="5" IsChecked="True" />
                                        <RadioButton x:Name="MarksRadioButton" Content="Marks" GroupName="Mode" Margin="5" />
                                    </DockPanel>
                                </StackPanel>

                                <!-- Submenu for Composition Modes, visible only when Pixel is selected -->
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PixelRadioButton, Path=IsChecked}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PixelRadioButton, Path=IsChecked}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <Label FontWeight="Bold">Composition Modes:</Label>
                                    <RadioButton Content="SourceOver" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="DestinationOver" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="SourceIn" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="DestinationIn" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="SourceOut" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="DestinationOut" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="SourceAtop" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="DestinationAtop" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="Clear" GroupName="CompositionMode" Margin="5" />
                                    <RadioButton Content="XOR" GroupName="CompositionMode" Margin="5" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Submenu for Marks, visible only when Marks is selected -->
                            <StackPanel Orientation="Vertical" Margin="5">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MarksRadioButton, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=MarksRadioButton, Path=IsChecked}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <Label FontWeight="Bold">Glyphs:</Label>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Positive Difference: " />
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="△" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="▲" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="◆" />
                                        </RadioButton>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Positive Difference: " />
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="▽" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="▼" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="★" />
                                        </RadioButton>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="No Difference: "/>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="■" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="□" />
                                        </RadioButton>
                                        <RadioButton GroupName="GlyphOptions" Margin="5">
                                            <TextBlock FontFamily="Segoe UI Symbol" Text="●" />
                                        </RadioButton>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Label FontWeight="Bold">Area Size:</Label>
                                        <TextBox Width="100" Margin="5" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Label FontWeight="Bold">Blur:</Label>
                                <TextBox Width="100" Margin="5" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Label FontWeight="Bold">Offset:</Label>
                                <TextBox Width="100" Margin="5" Text="{Binding OffsetValue, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Indication Frame Preview Pane -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="250" Height="180">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Indication Frame" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <!-- Animation of images in selected folder -->
                        <StackPanel Orientation="Vertical">
                            <Image Source="{Binding CurrentImage.ImagePath}" Height="Auto" Width="200" VerticalAlignment="Top"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Label FontWeight="Bold" Content="Frame Index: "/>
                                <Label Content="{Binding CurrentImage.FrameNumber, Converter={StaticResource IndexConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>

            <!-- Parent Control Pane : Center/Right -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <!-- Offset Frame -->
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="410" Height="240">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Offset Frame" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Animation Frame -->
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="410" Height="240">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Animation Frame" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>

                            <!-- Animation of images in selected folder -->
                            <Image Source="{Binding CurrentImage.ImagePath}" Height="350" Width="350" Margin="0"/>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Composite View -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="830" Height="400" HorizontalAlignment="Left">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Composite View" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                    </DockPanel>
                </Border>

                <!-- TODO: Overview Timeline thumbnails -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="830" Height="100">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Timeline Overview" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>

                        <ListBox x:Name="TimelineListBox" ItemsSource="{Binding Images}" SelectionMode="Single" Height="Auto" MinHeight="90" VerticalAlignment="Center" SelectionChanged="ListBox_SelectionChanged">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Converter={StaticResource IndexConverter}}" 
                           HorizontalAlignment="Center" Margin="0"/>
                                        <Image Source="{Binding ImagePath}" Width="60" Height="40" Grid.Row="1" Margin="0" Opacity="0.5"/>
                                        <Border Background="Transparent" BorderBrush="Red" BorderThickness="2" Visibility="{Binding IsCurrent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Image Source="{Binding ImagePath}" Width="60" Height="40" Grid.Row="1" Margin="0"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </DockPanel>
                </Border>

                <!-- TODO: Zoomed Timeline View -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Width="830" Height="160">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Zoomed Timeline" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>

                    </DockPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
