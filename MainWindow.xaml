<Window x:Class="TemporalMotionExtractionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemporalMotionExtractionAnalysis"
        xmlns:models="clr-namespace:TemporalMotionExtractionAnalysis.Model"
        mc:Ignorable="d"
        Title="Temporal Motion Analysis App" 
        Width="Auto"
        Height="1035"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <models:IndexConverter x:Key="IndexConverter"/>
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="1000">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Select Image Folder" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label Content="Selected Folder Name: " FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Content="{Binding FolderName}" MaxWidth="300" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Content="Browse" Command="{Binding LoadImagesCommand}" Width="100" Margin="5,20,10,20"/>
                            
                            <!-- Display Image Count -->
                            <TextBlock Text="{Binding ImageCount, StringFormat='Number of Images: {0}'}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
            
            <!-- Parent Control Pane -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Playback Controls Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="10">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Playback Controls" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <!-- Animation of images in selected folder -->
                            <Image Source="{Binding CurrentImage.ImagePath}" Height="250" Width="350" Margin="10, 0, 5, 0"/>

                            <!-- Start/Stop Animation controls -->
                            <Button Content="Start Animation" Command="{Binding StartAnimationCommand}" Height="35" Width="100" Margin="10,0,5,0"/>
                            <Button Content="Stop Animation" Command="{Binding StopAnimationCommand}" Height="35" Width="100" Margin="5,0,10,0"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Visual Encoding Options Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="300">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Visual Encoding Options" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Vertical" Margin="20,0">
                            <!-- TODO: Add your visual encoding options here -->
                            <StackPanel Orientation="Horizontal">
                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Glyphs:</Label>
                                    
                                </DockPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Option 2:</Label>

                                </DockPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Option 3:</Label>

                                </DockPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Option 4:</Label>

                                </DockPanel>
                            </StackPanel>

                            <!-- Image Adjustment controls: Brightness, Contrast, Saturation -->
                            <StackPanel VerticalAlignment="Center">
                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Brightness:</Label>
                                    <TextBox Text="{Binding ElementName=sliderBrightness, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Center" Width="40" />
                                    <Slider Minimum ="-100" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="sliderBrightness" Value="{Binding SliderBrightness}" />
                                </DockPanel>

                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" Width="72" FontWeight="Bold">Contrast:</Label>
                                    <TextBox Text="{Binding ElementName=sliderContrast, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Center" Width="40" />
                                    <Slider Minimum ="-100" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="sliderContrast" Value="{Binding SliderContrast}"/>
                                </DockPanel>

                                <DockPanel VerticalAlignment="Center" Margin="5">
                                    <Label DockPanel.Dock="Left" FontWeight="Bold">Saturation:</Label>
                                    <TextBox Text="{Binding ElementName=sliderSaturation, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Center" Width="40" />
                                    <Slider Minimum ="-100" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="sliderSaturation" Value="{Binding SliderSaturation}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- Button to kick off motion extraction -->
                            <Button Content="Start Analysis" Command="{Binding StartMotionExtractionCommand}" Width="100" Margin="5,20,10,20"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

            </StackPanel>

            <!-- Overview Timeline thumbnails -->
            <ListBox ItemsSource="{Binding Images}" SelectionMode="Multiple" Height="90" VerticalAlignment="Center" SelectionChanged="ListBox_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Converter={StaticResource IndexConverter}}" 
                                HorizontalAlignment="Center" Margin="0"/>
                            <Image Source="{Binding ImagePath}" Width="5" Height="5" Grid.Row="1" Margin="0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="1000" Height="400">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Analysis Pane" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>

                    <!-- Selected frames view -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <ItemsControl ItemsSource="{Binding SelectedFrames}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FrameNumber}" HorizontalAlignment="Center" Margin="5"/>
                                        <Image Source="{Binding ImagePath}" Width="150" Height="150" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>


                    <!-- TODO: Overlay View -->
                    
                    <!-- TODO: Metrics -->

                </DockPanel>
            </Border>
        
        </StackPanel>
    </Grid>
</Window>
