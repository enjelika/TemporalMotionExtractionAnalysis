<Window x:Class="TemporalMotionExtractionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemporalMotionExtractionAnalysis"
        xmlns:models="clr-namespace:TemporalMotionExtractionAnalysis.Model"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Window.Resources>
        <models:IndexConverter x:Key="IndexConverter"/>
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">
            <!-- Select folder and load images controls -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Selected Folder Name: " Margin="10, 20, 5, 20" />
                <Label Content="{Binding FolderName}" Margin="10, 20, 5, 20"/>
                <Button Content="Load Images" Command="{Binding LoadImagesCommand}" Margin="20"/>
            </StackPanel>
                       
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Playback Controls -->
                <StackPanel Orientation="Horizontal">
                    <!-- Animation of images in selected folder -->
                    <Image Source="{Binding CurrentImage.ImagePath}" Height="250" Width="350" Margin="0, 0, 20, 0"/>

                    <!-- Start/Stop Animation controls -->
                    <Button Content="Start Animation" Command="{Binding StartAnimationCommand}" Margin="20, 90"/>
                    <Button Content="Stop Animation" Command="{Binding StopAnimationCommand}" Margin="20, 90"/> 
                </StackPanel>
                
                <!-- Visual Encoding Options -->
                <StackPanel Orientation="Horizontal">
                    
                </StackPanel>
            </StackPanel>

            <!-- Overview Timeline thumbnails -->
            <ListBox ItemsSource="{Binding Images}" SelectionMode="Multiple" MaxHeight="100" SelectionChanged="ListBox_SelectionChanged"> <!--SelectedItem="{Binding CurrentFrame}">-->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Converter={StaticResource IndexConverter}}" 
                                HorizontalAlignment="Center" Margin="0"/>
                            <Image Source="{Binding ImagePath}" Width="5" Height="5" Grid.Row="1" Margin="0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Selected frames view -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <ItemsControl ItemsSource="{Binding SelectedFrames}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath}" Width="150" Height="150" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- TODO: Comparison pane -->
            
        </StackPanel>

    </Grid>
</Window>
