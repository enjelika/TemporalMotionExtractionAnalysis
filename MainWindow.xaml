<Window x:Class="TemporalMotionExtractionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemporalMotionExtractionAnalysis"
        xmlns:models="clr-namespace:TemporalMotionExtractionAnalysis.Model"
        mc:Ignorable="d"
        Title="Temporal Motion Analysis App" 
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Window.Resources>
        <models:IndexConverter x:Key="IndexConverter"/>
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="750">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Select Image Folder" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Label Content="Selected Folder Name: " HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Content="{Binding FolderName}" MaxWidth="300" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Content="Browse" Command="{Binding LoadImagesCommand}" Width="100" Margin="5,20,10,20"/>
                            
                            <!-- Display Image Count -->
                            <TextBlock Text="{Binding ImageCount, StringFormat='Number of Images: {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
            
            <!-- Parent Control Pane -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Playback Controls Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="10">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Playback Controls" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <!-- Animation of images in selected folder -->
                            <Image Source="{Binding CurrentImage.ImagePath}" Height="250" Width="350" Margin="10, 0, 5, 0"/>

                            <!-- Start/Stop Animation controls -->
                            <Button Content="Start Animation" Command="{Binding StartAnimationCommand}" Height="35" Width="100" Margin="10,0,5,0"/>
                            <Button Content="Stop Animation" Command="{Binding StopAnimationCommand}" Height="35" Width="100" Margin="5,0,10,0"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Visual Encoding Options Border with Label -->
                <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="300">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Visual Encoding Options" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <!-- TODO: Add your visual encoding options here -->
                        </StackPanel>
                    </DockPanel>
                </Border>

            </StackPanel>

            <!-- Overview Timeline thumbnails -->
            <ListBox ItemsSource="{Binding Images}" SelectionMode="Multiple" MaxHeight="90" VerticalAlignment="Center" SelectionChanged="ListBox_SelectionChanged">
                <!--SelectedItem="{Binding CurrentFrame}">-->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock 
                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Converter={StaticResource IndexConverter}}" 
                                HorizontalAlignment="Center" Margin="0"/>
                            <Image Source="{Binding ImagePath}" Width="5" Height="5" Grid.Row="1" Margin="0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="1000">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Analysis Pane" HorizontalAlignment="Center" Margin="5"/>
                    <!-- Selected frames view -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <ItemsControl ItemsSource="{Binding SelectedFrames}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FrameNumber}" HorizontalAlignment="Center" Margin="5"/>
                                        <Image Source="{Binding ImagePath}" Width="150" Height="150" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- TODO: Overlay View -->
                    
                    <!-- TODO: Metrics -->
                    
                    <!-- TODO: Visualization -->
                </DockPanel>
            </Border>

            <!-- TODO: Comparison pane -->
        
        </StackPanel>
    </Grid>
</Window>
